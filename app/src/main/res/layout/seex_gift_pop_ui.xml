<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/disop"></View>

    <RelativeLayout
        android:id="@+id/ll_facechoose"
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:layout_above="@+id/buttom_view"
        android:background="#99000000">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_contains"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:id="@+id/buttom_view"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textColor="@color/white"

                android:paddingTop="@dimen/padding_7"
                android:paddingBottom="@dimen/padding_7"
                android:layout_marginRight="@dimen/padding_20"
                android:textSize="@dimen/padding_14"
                android:paddingLeft="15dp"
                android:paddingRight="@dimen/padding_15"
                android:background="@drawable/seex_load_but_bg"
                android:id="@+id/chongzhi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="@color/white"
                android:paddingTop="@dimen/padding_7"
                android:paddingBottom="@dimen/padding_7"
                android:layout_marginRight="@dimen/padding_20"
                android:textSize="@dimen/padding_14"
                android:paddingLeft="15dp"
                android:paddingRight="@dimen/padding_15"
                android:background="@drawable/seex_load_but_bg"
                android:id="@+id/sendgif"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:textSize="@dimen/padding_14"
            android:gravity="center"
            android:id="@+id/blanceview"
            android:drawableRight="@mipmap/rice"
            android:text="余额:"/>
    </RelativeLayout>


</RelativeLayout>