<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seex_black_box"
        android:gravity="center|left"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_10"
            android:text="@string/seex_action_settings"
            android:textColor="@color/red_tip" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iconView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/padding_2"
            android:src="@mipmap/agree"/>

    </LinearLayout>

    <com.chat.seecolove.widget.MagicTextView
        android:id="@+id/giftNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivgift"
        android:includeFontPadding="false"
        android:text="x1"
        android:textColor="#ffc801"
        android:textSize="20sp"
        android:textStyle="bold"
        app:strokeColor="@android:color/white"
        app:strokeJoinStyle="miter"
        app:strokeWidth="2" />
</LinearLayout>