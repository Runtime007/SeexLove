<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/padding_30"
              android:paddingLeft="@dimen/padding_20"
              android:paddingRight="@dimen/padding_20"
              android:paddingTop="@dimen/padding_30">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seex_action_settings"/>

    <com.chat.seecolove.widget.ClearableEditText
        android:id="@+id/clearet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20"
        android:maxLength="12"
        android:singleLine="true"
        android:textColor="@color/friend_edt_text"
        android:textSize="@dimen/friend_edt_text"
        tools:text="@string/seex_action_settings"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chat_item_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_sure"
            style="@style/text_white18"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_btn_pink"
            android:gravity="center"
            android:text="@string/seex_mail_sure"/>

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/info_more18"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/friend_btn_margin"
            android:background="@drawable/shape_btn_white_gray"
            android:gravity="center"
            android:text="@string/seex_cancel"/>
    </LinearLayout>
</LinearLayout>