<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_centerInParent="true"
        android:background="@drawable/seex_white_circle"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/anchor_vip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="邀请你识别下方二维码进行认证"
            android:layout_marginTop="@dimen/padding_20"
            android:textColor="@color/back_text"
            android:textSize="@dimen/padding_16"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            fresco:actualImageScaleType="fitCenter"
            fresco:roundAsCircle="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="微信号：kukuramday"
            android:layout_marginBottom="@dimen/padding_20"
            android:textColor="@color/back_text"
            android:textSize="@dimen/padding_16" />

    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_10"
            android:id="@+id/close"
            android:src="@mipmap/pink_close"/>
    </RelativeLayout>
</RelativeLayout>