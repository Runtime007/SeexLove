<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/squarelayout_bg">

    <com.chat.seecolove.widget.SquareLayout
        android:background="@drawable/item_enjoy_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gift_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dp"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@color/page_bg"/>

        <TextView
            android:id="@+id/gift_price"
            style="@style/text_white12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_icon"
            android:layout_centerHorizontal="true"/>

    </com.chat.seecolove.widget.SquareLayout>

</LinearLayout>