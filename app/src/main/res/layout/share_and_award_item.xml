<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@null">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bg_home">
        <LinearLayout
            android:id="@+id/share_and_award_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/share_and_award_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/text_gray14"
                android:text="奖励一"/>

            <TextView
                android:id="@+id/share_and_award_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="6元邀请奖励"/>

            <TextView
                android:id="@+id/share_and_award_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="20dp"
                android:text="邀请的人注册并成功完成一笔充值后兑现"/>

            <ImageView
                android:id="@+id/share_and_award_item_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="50dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/share_and_award_item_view"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/menu_gray"/>
            <TextView
                android:id="@+id/share_and_award_item_colse"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="关 闭"/>
        </LinearLayout>

    </RelativeLayout>




</LinearLayout>