<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_1"
        android:id="@+id/ischeckview"
        android:background="@drawable/seex_recharge_incall_bg">
        <!--android:background="@drawable/bg_recharge_item"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recharge_money"
                style="@style/text_white16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unit"
                android:textColor="@color/qing_green"
                android:maxLines="1"
                android:gravity="center"
                android:drawableRight="@mipmap/rice"
                android:textSize="12sp"
                android:text="B" />
        </LinearLayout>


    </FrameLayout>


</FrameLayout>
