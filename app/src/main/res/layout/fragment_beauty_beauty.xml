<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/popu_menu_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/padding_12"
            android:paddingRight="@dimen/padding_12"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_white14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_12"
                    android:text="磨皮" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/seeker_smooth"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:dsb_allowTrackClickToDrag="false"
                    app:dsb_indicatorColor="@color/white"
                    app:dsb_indicatorTextAppearance="@style/seekertext"
                    app:dsb_progressColor="@color/theme_title_color_0"
                    app:dsb_rippleColor="@color/theme_title_color_0"
                    app:dsb_trackColor="@color/white_tran40" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_32"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_white14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_12"
                    android:text="美白" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/seeker_light"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:dsb_allowTrackClickToDrag="false"
                    app:dsb_indicatorColor="@color/white"
                    app:dsb_indicatorTextAppearance="@style/seekertext"
                    app:dsb_progressColor="@color/theme_title_color_0"
                    app:dsb_rippleColor="@color/theme_title_color_0"
                    app:dsb_trackColor="@color/white_tran40" />
            </LinearLayout>
        </LinearLayout>


</FrameLayout>