<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/footer"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:indeterminateDuration="800"
            android:indeterminateDrawable="@drawable/footer_progress_color" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/loading_img"
            android:src="@drawable/load_anim"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/no_more_dataview"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint"
            android:layout_marginLeft="@dimen/padding_50"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/no_data"></View>
        <TextView
            android:id="@+id/no_data"
            style="@style/setting_15"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/padding_3"
            android:gravity="center"
            android:textColor="@color/hint"
            android:text="@string/seex_no_more_data"
            android:visibility="visible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_50"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/no_data"></View>
    </RelativeLayout>



</LinearLayout>
