<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/poptag"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_edit_bg"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_20"
                android:text="@string/seex_loading_app"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_20"
                android:layout_alignParentRight="true"
                android:id="@+id/close"
                android:src="@mipmap/close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 手机 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp">

                <EditText
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@mipmap/phone_number"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="@string/seex_reg_phone_hint"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:id="@+id/et_phone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_alignParentBottom="true"
                    android:background="@color/hint"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp">

                <EditText
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@mipmap/phone_password"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="@string/seex_reg_newpsd_hint"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:maxLength="16"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                    android:inputType="textPassword"
                    android:id="@+id/codeEdit"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seex_forget_passwords"
                    android:id="@+id/forget_psd"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/hint"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/hint"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/view_reg_fir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seex_fast_reg"
                    android:textColor="@color/hint"
                    android:layout_weight="1"
                    android:id="@+id/reg"
                    android:gravity="center|left"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seex_fast_loading"
                    android:textColor="@color/qing_green"
                    android:layout_weight="1"
                    android:id="@+id/loading"
                    android:gravity="center|right"
                    android:textSize="16sp"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/seex_but_bg"
                android:textSize="@dimen/padding_18"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/ok"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="登录"/>

            <LinearLayout
                android:id="@+id/view_agreenment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_agr"
                    style="@style/text_yellow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/check"
                    android:layout_marginLeft="@dimen/padding_3"
                    android:text=""
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>