<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit"
            style="@style/text_more16"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            android:gravity="left"
            android:hint="来....开始介绍你自己吧"
            android:maxLength="70"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:textColorHint="@color/tab_nor" />

        <TextView
            android:id="@+id/tv_length"
            style="@style/text_nickname12"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="bottom|right"
            android:text="还可以输入70字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <include layout="@layout/line_hor_mar_left_right" />

    <TextView
        style="@style/text_nickname14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="为了营造良好的社区氛围，我们将对其进行审核" />

</LinearLayout>