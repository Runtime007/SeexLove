<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="视频价格"
            android:layout_marginLeft="10dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text2"
            android:layout_toRightOf="@+id/text1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/minus_icon" />

            <TextView
                android:id="@+id/monye_View"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/edit_price_bg"
                android:text="50"
                android:textColor="#ff3333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/addus_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/seex_unit_prise_monye"
            android:layout_marginRight="10dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="语音价格"
            android:layout_marginLeft="10dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/stext2"
            android:layout_toRightOf="@+id/stext1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voice_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/minus_icon" />

            <TextView
                android:id="@+id/voice_monye_View"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/edit_price_bg"
                android:text="50"
                android:textColor="#ff3333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/voice_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/addus_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/stext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/seex_unit_prise_monye"
            android:layout_marginRight="10dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="私照价格"
            android:layout_marginLeft="10dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text12"
            android:layout_toRightOf="@+id/text0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minus_si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/minus_icon" />

            <TextView
                android:id="@+id/monyeprivte_View"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/edit_price_bg"
                android:text="10"
                android:textColor="#ff3333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/add_si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/addus_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/seex_unit_prise_p"
            android:layout_marginRight="25dp"
            android:textColor="@color/back_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/padding_38"
        android:text="@string/seex_sure" />

</LinearLayout>