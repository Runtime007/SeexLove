<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/media_play_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#000000"
        >

        <VideoView
            android:id="@+id/media_play_videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagebg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/m_icon_shoot_return"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/m_icon_shoot_return"
                />
            <ImageView
                android:id="@+id/m_icon_shoot_apply"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/m_icon_shoot_apply"
                />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:background="@color/grid_item_click"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_nav_return_profile"/>
    </LinearLayout>



</RelativeLayout>