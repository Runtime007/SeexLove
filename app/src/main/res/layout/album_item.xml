<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.chat.seecolove.widget.SquareLayout_fra
        android:id="@+id/view_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme_nor"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="centerCrop"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            fresco:placeholderImage="@color/white"
            fresco:roundAsCircle="false"
          />


    </com.chat.seecolove.widget.SquareLayout_fra>
    <TextView
        android:id="@+id/tip_authing"
        style="@style/text_white16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="审核中"
        android:visibility="gone"
        android:background="@drawable/black_trans_round"/>
    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:clickable="true"
        android:src="@mipmap/btn_photos_del" />
</FrameLayout>