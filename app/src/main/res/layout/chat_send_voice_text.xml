<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.chat.seecolove.widget.ChatSendgLayout
                android:id="@+id/chat_send_msg_voice_view_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ff8a8a"
                android:minHeight="@dimen/chat_item_height"
                android:minWidth="100dp"
                android:gravity="center_vertical"
                fresco:round_width="5dp"
                fresco:round_height="5dp"
                fresco:top_left="true"
                fresco:top_right="true"
                fresco:bottom_left="true"
                fresco:bottom_right="true">
                </com.chat.seecolove.widget.ChatSendgLayout>

            <LinearLayout
                android:id="@+id/chat_send_msg_voice_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#00ffffff"
                android:minHeight="@dimen/chat_item_height"
                android:minWidth="100dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/chat_send_msg_voice_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp"
                            android:gravity="left"
                            android:textColor="#ffffff"
                            android:text="22'"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/chat_send_msg_voice_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:scaleType="centerInside"
                            android:layout_marginRight="20dp"
                            android:src="@mipmap/send_message_voice_b3"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>






    </LinearLayout>


</LinearLayout>